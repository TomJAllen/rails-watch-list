
<div class="container">
  <h1><%=@list.name %></h1>



  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card-movie">
      <img src="<%= bookmark.movie.poster_url %>" />
      <div class="card-movie-infos">
        <div>
          <h2><%=bookmark.movie.title %></h2>
          <p><%= bookmark.comment %></p>
          <%= link_to "Remove this movie from the list", bookmark_path(bookmark), data: {:confirm => 'Are you sure?'}, :method => :delete %>
        </div>
      </div>
    </div>
    <% end %>
    <div class="card-add">
      <%= link_to "Add a movie to this list", new_list_bookmark_path(@list)%>
    </div>
  </div>

  <%= render 'form', list: @list %>


  <%= link_to "<- back", lists_path%>
</div>
