  <div class="banner-info">
    <h1 id="banner-title">.MOVIE.LISTS.</h1>
    <%# <div class="container"> %>
      <div class="banner-content">
        <p>Organise your movies into personlised lists</p>
        <a class="ticket" <%= link_to "Create a new list!", new_list_path%> </a>
      </div>
    <%# </div> %>
